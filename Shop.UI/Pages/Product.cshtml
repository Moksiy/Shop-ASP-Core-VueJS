@page "{name}"
@model Shop.UI.Pages.ProductModel
@{
}

<div class="hero">
    <div class="hero-body">
        <div class="container">
            <div class="columns">
                <div class="column is-6">
                    <figure class="image">
                        <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                    </figure>
                </div>
                <div class="column is-6">
                    <section>
                        <header>
                            <p class="title">@Model.Product.Name</p>
                            <p class="subtitle">@Model.Product.Value</p>
                            <br />
                        </header>
                        <main>
                            <p class="subtitle">@Model.Product.Description</p>
                        </main>
                        <footer>

                        </footer>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

<div>


    
    
    <div>
        <form method="post">
            <label>Наличие</label>
            <select asp-for="CartViewModel.StockID">
                @foreach (var s in Model.Product.Stock)
                {
                    <option value="@s.ID">@s.Description</option>
                }
            </select>
            <label>Qty:</label>
            <input asp-for="CartViewModel.Qty" />
            <button type="submit">Подтвердить</button>
        </form>
    </div>
</div>
@await Component.InvokeAsync("Cart")